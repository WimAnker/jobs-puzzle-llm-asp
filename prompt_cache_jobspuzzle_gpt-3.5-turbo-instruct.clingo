% Task 1. Define the constants in each category.
index_of_person(0; 1; 2; 3).
index_of_job(0; 1; 2; 3; 4; 5; 6; 7).
index_of_gender(0; 1).
index_of_education(0; 1).
% Task 2. For each person Ip, there are exactly 2 jobs assigned at some column Ij.
{assign(Ip, Ij): index_of_job(Ij)}=2 :- index_of_person(Ip).
% Task 3. For each job Ij, there are exactly 2 people assigned at some row Ip.
{assign(Ip, Ij): index_of_person(Ip)}=2 :- index_of_job(Ij).
% Task 4. For each person Ip, there are exactly 2 genders assigned at some column Ig.
{assign_gender(Ip, Ij, Ig): index_of_gender(Ig)}=2 :- index_of_person(Ip).
% Task 5. For each job Ij, there is exactly 1 gender assigned at some row Ig.
{assign_gender(Ip, Ij, Ig): index_of_person(Ip)}=1 :- index_of_job(Ij).
% Task 6. For each person Ip, there are exactly 2 education levels assigned at some column Ie.
{assign_education(Ip, Ij, Ie): index_of_education(Ie)}=2 :- index_of_person(Ip).
% Task 7. For each job Ij, there is exactly 1 education level assigned at some row Ie.
{assign_education(Ip, Ij, Ie): index_of_person(Ip)}=1 :- index_of_job(Ij).
% Task 8. For each person Ip, there is exactly 1 gender assigned at some column Ig and 1 education level assigned at some column Ie.
{assign_gender(Ip, Ij, Ig), assign_education(Ip, Ij, Ie)}=1 :- index_of_person(Ip).
% Task 9. For each person Ip, there is exactly 1 job assigned at some column Ij and 1 gender assigned at some column Ig.
{assign(Ip, Ij), assign_gender(Ip, Ij, Ig)}=1 :- index_of_person(Ip).
% Task 10. For each person Ip, there is exactly 1 job assigned at some column Ij and 1 education level assigned at some column Ie.
{assign(Ip, Ij), assign_education(Ip, Ij, Ie)}=1 :- index_of_person(Ip).
% Task 11. For each person Ip, there is exactly 1 job assigned at some column Ij and 1 gender assigned at some column Ig and 1 education level assigned at some column Ie.
{assign(Ip, Ij), assign_gender(Ip, Ij, Ig), assign_education(Ip, Ij, Ie)}=1 :- index_of_person(Ip).
% Done tasks 1-11.

